<?xml version="1.0" encoding="UTF-8"?>
<interface domain="libbricks">
  <requires lib="gtk+" version="3.24"/>
  <template class="BrkTabBar" parent="GtkWidget">
    <child>
      <object class="GtkRevealer" id="revealer">
        <property name="transition-duration">200</property>
        <property name="transition-type">slide-down</property>
        <property name="child">
          <object class="GtkBox">
            <style>
              <class name="box"/>
            </style>
            <child>
              <object class="BrkBin" id="start_action_bin">
                <property name="visible">False</property>
                <style>
                  <class name="start-action"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow" id="scrolled_window">
                <property name="hscrollbar-policy">external</property>
                <property name="vscrollbar-policy">never</property>
                <property name="overlay-scrolling">False</property>
                <property name="hexpand">True</property>
                <property name="min-content-width">100</property>
                <property name="child">
                  <object class="BrkTabBox" id="box">
                    <property name="tab-bar">BrkTabBar</property>
                    <signal name="notify::resize-frozen" handler="notify_resize_frozen_cb" swapped="true"/>
                    <signal name="stop-kinetic-scrolling" handler="stop_kinetic_scrolling_cb" object="scrolled_window" swapped="true"/>
                    <signal name="extra-drag-drop" handler="extra_drag_drop_cb" swapped="true"/>
                    <signal name="extra-drag-value" handler="extra_drag_value_cb" swapped="true"/>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="BrkBin" id="end_action_bin">
                <property name="visible">False</property>
                <style>
                  <class name="end-action"/>
                </style>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
